<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.ui.activities.LoginActivity">

    <FrameLayout
        android:id="@+id/fl_headimage"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/backgroundshop" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/logo2" />

    </FrameLayout>

    <com.example.myshop.utils.ShopTextViewBold
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="LOGIN"
        android:textColor="@color/black"
        android:textScaleX="3.4"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_headimage" />

    <EditText
        android:id="@+id/tv_email"
        android:layout_width="271dp"
        android:layout_height="58dp"
        android:layout_marginTop="44dp"
        android:background="#E4E1E1"
        android:hint="Email ID"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/purple_700"
        android:textScaleX="1.4"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_login"
        app:layout_constraintVertical_bias="0.238"
        tools:ignore="DuplicateClickableBoundsCheck" />


    <EditText
        android:id="@+id/tv_password"
        android:layout_width="271dp"
        android:layout_height="58dp"
        android:layout_marginBottom="316dp"
        android:background="#E4E1E1"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/purple_700"
        android:textScaleX="1.4"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.example.myshop.utils.ShopTextViewBold
        android:id="@+id/forgotpasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="54dp"
        android:foreground="?attr/selectableItemBackground"
        android:text="Forgot Password?"
        android:textColor="#991FE4"
        android:textScaleX="1.4"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password"
        app:layout_constraintVertical_bias="1.0" />

    <com.example.myshop.utils.ShopButton
        android:id="@+id/btn_login"
        android:layout_width="319dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_background"
        android:foreground="?attr/selectableItemBackground"
        android:text="LOGIN"

        android:textScaleX="2.9"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password" />

    <LinearLayout
        android:id="@+id/ll_signup"
        android:layout_width="301dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login">


        <com.example.myshop.utils.ShopTextViewBold
            android:id="@+id/tv_donthaveaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Don't have an account?"
            android:textColor="@color/black"
            android:textScaleX="1.4"
            android:textSize="17sp" />

        <com.example.myshop.utils.ShopTextViewBold
            android:id="@+id/registerhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Register here"
            android:textColor="#991FE4"
            android:textScaleX="1.4"
            android:textSize="17sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>