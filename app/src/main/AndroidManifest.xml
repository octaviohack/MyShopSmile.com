<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyShopcom"
        tools:targetApi="31">
        <activity
            android:name=".activities.ui.activities.DashboarActivity"
            android:exported="false"
            android:label="@string/title_activity_dashboar"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".activities.ui.activities.UserProfileActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".activities.ui.activities.ForgotPasswordActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".activities.ui.activities.BaseActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".activities.ui.activities.RegisterActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".activities.ui.activities.LoginActivity"
            android:screenOrientation="fullSensor" />
        <activity android:name=".activities.ui.activities.MainActivity" />
        <activity
            android:name=".activities.ui.activities.SplashActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>